<!DOCTYPE html>
<html>

<head>
    <%include Head%>
    <script>
        $(function () {
            //로그인 버튼
            $('#LoginBtn').click(function () {
                InputCheck();
            });

            //비밀번호 입력란에서 엔터
            $("#PwInput").keydown(function (key) {
                if (key.keyCode == 13) {
                    InputCheck();
                }
            });
        });
        //입력 값 체크
        function InputCheck() {
            if ($('#IDInput').val() == '') {
                alert('아디이를 입력하세요');
            } else if ($('#PwInput').val() == '') {
                alert('비밀번호를 입력하세요');
            } else {
                $('#LoginForm').submit();
            }
        }

    </script>
</head>

<body class="body">
    <%include Banner%>
    <div class="card" style="width: 18rem; position: absolute; top: 40%; left: 50%; margin-left: -9rem;">
        <form action="/Company/Login" id="LoginForm" method="POST">
            <div class="card-body">
              <h5 class="card-title">로그인</h5>
              <div class="form-group mb-2">
                <input type="text" class="form-control" id="IDInput" name="ID" placeholder="아이디를 입력하세요">
              </div><div class="form-group mb-2" style="margin-top: 15px;">
                <input type="password" class="form-control" id="PwInput" name="password" placeholder="비밀번호를 입력하세요">
              </div>
              <button type = "button" class = "btn btn-warning center" id="LoginBtn"  style="margin-top: 15px;">로그인</button>
            </div>
            </form>
          </div>
</body>

</html>